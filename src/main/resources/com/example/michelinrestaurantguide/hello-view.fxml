<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.michelinrestaurantguide.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="welcomeText" text="Michelin Restaurant Search"/>

    <HBox spacing="10">
        <Label fx:id="selectText" text="Search by:" alignment="BASELINE_LEFT"/>
    </HBox>

    <!--  <Button text="Hello!" onAction="#onHelloButtonClick"/>-->

    <HBox spacing="10">
        <Button text="Location" onAction="#handleLocationOption"/>
        <Button text="Cuisine" onAction="#handleCuisineOption"/>
        <Button text="Price" onAction="#handlePriceOption"/>
    </HBox>

    <ListView fx:id="listView" visible="false"/>

    <HBox spacing="10" alignment="BASELINE_RIGHT">
        <Button fx:id="select" text="Select" onAction="#handleSelection" alignment="BASELINE_RIGHT" visible="false"/>
    </HBox>






</VBox>
